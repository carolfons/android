<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_sp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/sao_paulo_sp"
        tools:src="@sample/pacote.json/pacote/imagem"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/pacote.json/pacote/local"
        app:layout_constraintStart_toStartOf="@+id/iv_sp"
        app:layout_constraintEnd_toEndOf="@id/iv_sp"
        app:layout_constraintTop_toTopOf="@+id/iv_sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="15sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@android:drawable/screen_background_dark_transparent"
        />

    <View
        android:id="@+id/view_divisor"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sp"
        android:background="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/tv_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/pacote.json/pacote/dias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divisor"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_dias"
        app:layout_constraintTop_toBottomOf="@id/tv_dias"
        tools:text="@sample/pacote.json/pacote/preco"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"
        />

</androidx.constraintlayout.widget.ConstraintLayout>